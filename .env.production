# NeoC Assistant Production Environment Configuration
# Copy this file to .env for production deployment

# LLM Configuration - Production optimized
LLM_MODEL=phi3:latest
LLM_TEMPERATURE=0.1
LLM_CONTEXT_WINDOW=2048
LLM_CACHE_SIZE=100
LLM_TIMEOUT=60

# RAG Configuration - Production optimized
RAG_CACHE_SIZE=500
CHUNK_SIZE=512
CHUNK_OVERLAP=64
MAX_SEARCH_RESULTS=5
SIMILARITY_THRESHOLD=0.1

# API Configuration - Production settings
API_HOST=0.0.0.0
API_PORT=8000
MAX_REQUEST_SIZE=2000

# Database Configuration - Production paths
DB_PERSIST_DIR=/app/chroma_db
CACHE_DIR=/app/.cache
MAX_MEMORY_MB=1024

# Logging Configuration - Production logging
LOG_LEVEL=WARNING
LOG_DIR=/app/logs

# Security Configuration - Production security
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=100
ENABLE_INPUT_VALIDATION=true
MAX_INPUT_LENGTH=2000

# Ollama Configuration - Production host
OLLAMA_HOST=http://ollama:11434